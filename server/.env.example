# SERVER
PORT=8080
NODE_ENV=development

# Postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=appuser
DB_PASS=app_pass
DB_NAME=app_db
DB_SSL=0            # Cloud SQL 등 TLS 필요하면 1
DB_POOL_SIZE=10

# CORS
CORS_ORIGIN=http://localhost:5173

# dev fallback (로그인 없이 테스트 허용 여부)
USE_DEV_FALLBACK=1

# admin/event
ADMIN_TOKEN=local-admin-token
PAYOUT_SIMULATE=1    # 운영은 0

# TOSS (미니앱 암호화 payload 복호화)
TOSS_DECRYPTION_KEY=your_256bit_key_in_hex_or_base64
TOSS_KEY_FORMAT=hex # hex | base64

# 토스 포인트 프로모션 (선택)
TOSS_PROMOTION_CODE=
TOSS_PROMOTION_ACCESS_TOKEN=
